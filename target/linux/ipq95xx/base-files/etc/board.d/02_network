# [ -e /etc/config/network ] && exit 0

# touch /etc/config/network

# CFG=/etc/board.json

# . /lib/functions/uci-defaults.sh

. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

ipq95xx_setup_interfaces()
{
	local board="$1"

	case "$board" in
	qcom,ipq9574-ap-al01-c1 |\
	qcom,ipq9574-ap-al02-c1 |\
	qcom,ipq9574-ap-al02-c2 |\
	qcom,ipq9574-ap-al02-c3 |\
	qcom,ipq9574-ap-al02-c4 |\
	qcom,ipq9574-ap-al02-c5 |\
	qcom,ipq9574-ap-al02-c6 |\
	qcom,ipq9574-ap-al02-c8 |\
	qcom,ipq9574-db-al01-c1 |\
	qcom,ipq9574-db-al01-c2 |\
	qcom,ipq9574-db-al01-c3 |\
	qcom,ipq9574-db-al02-c1 |\
	qcom,ipq9574-db-al02-c2 |\
	qcom,ipq9574-db-al02-c3)
		ucidef_set_interfaces_lan_wan "eth1 eth2 eth3 eth4 eth5" "eth0"
		;;
	xiaomi,be10000|\
	xiaomi,be18000|\
	tplink,archer-be800)
		ucidef_set_interfaces_lan_wan "eth0 eth1 eth2 eth3 eth5" "eth4"
		;;
	xiaomi,be7000)
		ucidef_set_interfaces_lan_wan "eth1 eth2 eth3" "eth0"
		;;
	*)
		echo "Unsupported hardware. Network interfaces not intialized"
		;;
	esac
}

ipq95xx_setup_macs()
{
	local board="$1"
	local lan_mac=""
	local wan_mac=""
	local label_mac=""

	case "$board" in
	xiaomi,be10000)
		lan_mac=$(mtd_get_mac_ascii 0:APPSBLENV ethaddr)
		wan_mac=$(macaddr_add "$lan_mac" 1)
		;;
	tplink,archer-be550|\
	tplink,archer-be800)
		lan_mac=$(get_mac_binary "/tmp/tp_data/default-mac" 0)
		wan_mac=$(macaddr_add "$lan_mac" 1)
		;;
	*)
		;;
	esac

	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" $lan_mac
	[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" $wan_mac
	[ -n "$label_mac" ] && ucidef_set_label_macaddr $label_mac
}

board_config_update
board=$(board_name)
ipq95xx_setup_interfaces $board
ipq95xx_setup_macs $board
board_config_flush

exit 0
